@section scripts{
    <script src="@Url.Content("~/Scripts/local/controllers/header.js")" type="text/javascript"></script>
}

<div class="container-fluid" ng-controller="headercontroller">

    <div class="row">
        <div class="col-xs-12 col-md-12">
            <ul class="list-inline pull-right">
                <li><fb:like href="https://www.facebook.com/Que-Ads-South-African-Online-Classifieds-1666349133609773/" layout="button" action="like" show_faces="no"></fb:like></li>
                @if (!IsAuthenticated)
                {
                    <li>@Html.ActionLink("Login", "Login", "Account", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Register", "Register", "Account", new { area = "" }, null)</li>
                }
                else
                {
                    <li>
                        @Html.ActionLink("My Ads", "UserAds", "Ads", new { area = "" }, null)
                    </li>
                    <li>
                        @Html.ActionLink("Sign Out", "Logoff", "Account", new { area = "" }, null)
                    </li>
                }
            </ul>
            @if (IsAuthenticated)
            {
                <ul class="list-inline pull-left">
                    <li><a class="text-left" href="@Url.Action("EditUser", "Account", new { area = "" })">Welcome @User.UserName</a></li>
                </ul>
            }
        </div>
    </div>
    <div class="row bg-primary visible-md visible-lg">
        <div class="col-md-4">
            <a class="text-primary logo-container" href="@Url.Action("Home", "Home", new { area = "" })">QueAds.co.za</a>
        </div>
        <div class="col-md-4">
            <div class="col-md-8 vertical-centered">
                <a href="@Url.Action("CreateAd", "Ads", new { area = "" })">
                    <span class="btn btn-success btn-sm btn-block">
                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Sell your item
                    </span>
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="col-md-8 pull-right vertical-centered">
            </div>
        </div>
    </div>
    <div class="row bg-primary visible-xs visible-sm">
        <div class="col-xs-12">
            <a class="text-primary logo-container" href="@Url.Action("Home", "Home", new { area = "" })">Que Ads.co.za</a>
        </div>
        <div class="col-xs-12 bottom-button">
            <a href="@Url.Action("CreateAd", "Ads", new { area = "" })" class="btn btn-success btn-block">
                <span class="glyphicon glyphicon-plus" aria-hidden="true">
                </span> Sell your item
            </a>
        </div>
    </div>

</div>